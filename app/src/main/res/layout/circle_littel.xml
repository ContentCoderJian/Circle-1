<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="62dp"
    android:layout_height="62dp"
    android:background="@drawable/selector_circle_bg">

    <!-- 内圆线 -->
    <com.liuzhuangzhuang.circle.view.CustomLinearLayout
        android:id="@+id/circle_little_ll"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_centerInParent="true"
        android:background="@drawable/selector_circle_inner_bg"
        android:orientation="horizontal">

    </com.liuzhuangzhuang.circle.view.CustomLinearLayout>

    <!-- 二级分类名称 -->
    <TextView
        android:id="@+id/circle_little_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="超市"
        android:textColor="#777777"
        android:textSize="14dp" />

    <!-- 二级分类图标 -->
    <ImageView
        android:id="@+id/circle_little_icon"
        android:layout_width="18.5dp"
        android:layout_height="18.5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>